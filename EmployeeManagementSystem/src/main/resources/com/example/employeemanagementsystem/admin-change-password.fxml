<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="15.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.employeemanagementsystem.controller.AdminChangePasswordController">
    <padding>
        <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
    </padding>

    <Label text="Change Admin Password">
        <font>
            <Font name="System Bold" size="22.0" />
        </font>
    </Label>

    <VBox maxWidth="300.0" spacing="10.0">
        <Label text="Admin Email" />
        <TextField fx:id="emailField" promptText="admin@gmail.com" />

        <Label text="Old Password" />
        <PasswordField fx:id="oldPasswordField" promptText="Current Password" />

        <Label text="New Password" />
        <PasswordField fx:id="newPasswordField" promptText="New Password" />

        <Button maxWidth="Infinity" onAction="#onChangePassword" style="-fx-background-color: #2196f3; -fx-text-fill: white; -fx-cursor: hand;" text="Update Password">
            <font>
                <Font name="System Bold" size="13.0" />
            </font>
        </Button>

        <Button maxWidth="Infinity" onAction="#onMenu" style="-fx-cursor: hand;" text="Back to Menu" />
    </VBox>
</VBox>
