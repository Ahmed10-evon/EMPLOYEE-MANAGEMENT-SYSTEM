<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.employeemanagementsystem.controller.RoleController"
      alignment="CENTER"
      spacing="18">

    <Label text="Employee Management System" styleClass="title-label"/>

    <Button text="Login as Admin"
            onAction="#onAdminLogin"
            prefWidth="220"/>

    <Button text="Login as Employee"
            onAction="#onEmployeeLogin"
            prefWidth="220"/>

</VBox>
